<p><span class="label label-inverse">Enter Your Username and Password below <%= resource_name.to_s.humanize %> </span></p>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password, label: "New Password", autocomplete: "off" %>
  <%= f.input :password_confirmation, label: "New Password Confirmation", autocomplete: "off" %>
  <%= f.input :current_password %>

  <div clss="form actions">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>

<p><span class="label label-important">Cancel my account</span></p>

<p>Sorry to see you go ... <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

<%= link_to "Back", :back %>
